<ul class="site-nav">
  {% for link in linklists[section.settings.main_linklist].links %}
    {%- assign child_list_handle = link.title | handleize -%}
    {% if menus[child_list_handle].links != blank %}
      <li class="site-nav__item site-nav__item--has-submenu{% if link.active %} site-nav__item--active{% endif %}">
        <a href="{{ link.url }}">
          {{ link.title }}
          {% include 'icon-arrow-down' %}
        </a>
        <ul class="site-nav-submenu">
          {% for childlink in menus[child_list_handle].links %}
            <li classs="site-nav-submenu__item{% if childlink.active %} site-nav-submenu__item--active{% endif %}">
              <a href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
            </li>
          {% endfor %}
        </ul>
      </li>
    {% else %}
      <li class="site-nav__item{% if link.active %} site-nav__item--active{% endif %}">
        <a href="{{ link.url }}">{{ link.title }}</a>
      </li>
    {% endif %}
  {% endfor %}
</ul>
