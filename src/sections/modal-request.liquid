<div data-section-id="{{ section.id }}" data-section-type="modal-request">
  <div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            {% include 'icon-close' %}
          </button>
        </div>
        <div class="modal-body">

          <div class="request">
            <h4 class="request__title" id="myModalLabel">{{ 'contact.general.request' | t }}</h4>
            <h6 class="request__subtitle">{{ 'contact.general.request_about' | t: product: product.title }}</h6>

            {% if section.settings.text != blank %}
              <div class="request__rte rte">{{ section.settings.text }}</div>
            {% endif %}
          </div>

          {% form 'contact', class: 'form-vertical' %}

            {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}

            <div class="form-group">
              <label for="ContactFormName">{{ 'contact.form.name_label' | t }}</label>
              <input type="text" name="contact[name]" id="ContactFormName" placeholder="{{ 'contact.form.name' | t }}">
            </div>

            <div class="form-group">
              <label for="ContactFormEmail">{{ 'contact.form.email_label' | t }}</label>
              <input type="email" name="contact[email]" id="ContactFormEmail" placeholder="{{ 'contact.form.email' | t }}">
            </div>

            <div class="form-group">
              <label for="ContactFormPhone">{{ 'contact.form.phone_label' | t }}</label>
              <input type="tel" name="contact[phone]" id="ContactFormPhone" placeholder="{{ 'contact.form.phone' | t }}">
            </div>

            <div class="form-group">
              <label for="ContactFormCountry">{{ 'contact.form.country_label' | t }}</label>
              <input type="text" name="contact[country]" id="ContactFormCountry" placeholder="{{ 'contact.form.country' | t }}">
            </div>

            <div class="form-group">
              <label for="ContactFormZipCode">{{ 'contact.form.zip_code_label' | t }}</label>
              <input type="text" name="contact[zip_code]" id="ContactFormZipCode" placeholder="{{ 'contact.form.zip_code' | t }}">
            </div>

            <input type="submit" class="btn" value="{{ 'products.product.request' | t }}">

          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Contact form",
    "settings": [
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Please fill in the boxes and we will get back to you in less than 24 hours. If you wish to obtain a shipping estimate, please fill in your Country and Zip Code.</p>"
      }
    ]
  }
{% endschema %}
